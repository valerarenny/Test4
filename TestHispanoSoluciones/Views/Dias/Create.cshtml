@model TestHispanoSoluciones.Models.Dias

@{
    ViewBag.Title = "Crear";
}

<h2>Crear</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Dias</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <label class="control-label col-md-2">Dias</label>

            <div class="col-md-10">
                @Html.EditorFor(model => model.Dias1, new { htmlAttributes = new { @class = "form-control" } })
