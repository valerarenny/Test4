@model IEnumerable<TestHispanoSoluciones.Models.Departamento>

@{
    ViewBag.Title = "Departamentos";
}

<h2>Departamentos</h2>

<p>
    @Html.ActionLink("Crear Departamento", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Departamento1)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Departamento1)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id = item.Id_Departamento }, new { @class = "btn btn-default" })
            @Html.ActionLink("Detalles", "Details", new { id = item.Id_Departamento }, new { @class = "btn btn-primary" })
            @Html.ActionLink("Borrar", "Delete", new { id = item.Id_Departamento }, new { @class = "btn btn-danger" })
        </td>
    </tr>
}

</table>
